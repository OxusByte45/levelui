section.connections
  background: #fafafa
  position: absolute
  top: 80px
  bottom: 0
  left: 0
  right: 0
  margin: 0 auto

  .connection-options
    display: block
    padding: 15%
    position: relative
    height: auto 

    .option
      position: relative
      height: auto
      min-height: 40px
      margin-bottom: 25px
      display: block

      input[type="text"]
        width: 80%

      input[type="button"]
        margin-left: -2px

    .heading
      display: block
      margin-bottom: 8px
      margin-top: 20px
      height: auto
      min-height: 28px
      line-height: 1.2

      h2
        margin: 0
        padding: 0
        font-size: 18px
        font-weight: 600
        line-height: 1.2
        display: inline-block
        vertical-align: middle

      .large-icon
        display: inline-block
        vertical-align: middle

